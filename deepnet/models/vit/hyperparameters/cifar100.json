{
    "pytorch_lightning_module": {
        "module": "trainers.base_classification",
        "class": "LightningClassificationModule",
        "params": {
            "params": {
                "module": "argparse",
                "class": "Namespace",
                "self": true
            },
            "classifier": {
                "module": "modules.vit.vit",
                "class": "ViT",
                "params": {
                    "image_size": 32,
                    "patch_size": 4,
                    "num_classes": 100,
                    "dim": 256,
                    "depth": 6,
                    "heads": 16,
                    "mlp_dim": 256,
                    "dropout": 0.1,
                    "emb_dropout": 0.1
                }
            }
        }
    },
    "optimizers": {
        "classifier": {
            "optimizer": {
                "module": "torch.optim",
                "class": "Adam",
                "params": {
                    "lr": 0.0004,
                    "betas": [
                        0.5,
                        0.999
                    ]
                }
            },
            "lr_scheduler": {
                "monitor": "val_loss",
                "scheduler": {
                    "module": "torch.optim.lr_scheduler",
                    "class": "ReduceLROnPlateau",
                    "params": {
                        "mode": "min",
                        "factor": 0.5,
                        "threshold": 1e-08,
                        "threshold_mode": "rel",
                        "patience": 0,
                        "verbose": true
                    }
                }
            }
        }
    },
    "trainer": {
        "module": "pytorch_lightning",
        "class": "Trainer",
        "params": {
            "gpus": 1,
            "max_epochs": 100,
            "precision": 16,
            "gradient_clip_val": 0.5,
            "enable_checkpointing": true,
            "callbacks": [
                {
                    "module": "pytorch_lightning.callbacks",
                    "class": "EarlyStopping",
                    "params": {
                        "monitor": "val_loss",
                        "patience": 10,
                        "mode": "min"
                    }
                },
                {
                    "module": "pytorch_lightning.callbacks",
                    "class": "ModelCheckpoint",
                    "params": {
                        "dirpath": "{save_dir}/checkpoints",
                        "monitor": "val_loss",
                        "save_top_k": 1,
                        "verbose": true,
                        "save_last": true,
                        "mode": "min"
                    }
                }
            ],
            "logger": {
                "module": "pytorch_lightning.loggers",
                "class": "WandbLogger",
                "params": {
                    "project": "cifar100",
                    "name": "vit_vanilla",
                    "save_dir": "./logs",
                    "log_model": false
                }
            }
        }
    },
    "data": {
        "module": "data_loaders.cifar100.data_loader",
        "class": "CifarLightningDataModule",
        "params": {
            "location": "./data/cifar100",
            "batch_size": 64,
            "image_size": [
                32,
                32
            ]
        }
    }
}